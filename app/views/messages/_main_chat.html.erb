<div class="chat-header">
  <div class="chat-header-name">honyarara</div>
  <div class="chat-header-end-btn">
    <a href="#">チャットを終了する</a>
  </div>
</div>




<div class="chat-screen">
  <div class="messages">
    <div class="chat-user">
      <div class="chat-uesr-name">Tom</div>
      <div class="time">2023/11/11(wed)12:45:30</div>
    </div>
    <div class="message">おはよう</div>
  </div>

  <div class="messages">
    <div class="chat-user">
      <div class="chat-uesr-name">Jelly</div>
      <div class="time">2023/11/11(wed)12:50:30</div>
    </div>
    <div class="message">こんばんは</div>
  </div>
</div>






<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>